@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
    <link rel="stylesheet" href="~/Estilos/StyleSheet2.css" />
    @Styles.Render("~/Content/css")
</head>
<body>       
                <div class="login-box">
                    <img src="~/Estilos/avatar.png" class="avatar"  />
                    <h1>Login Here</h1>
                    <form action="@Url.Action("Index","Acceso")" method="post">
                        
                            <p>Email</p>
                            <input class="form-control" type="email" name="correo" />                                               
                            <p>Contraseña</p>
                            <input class="form-control" type="password" name="clave" />
                        

                        <input type="submit" name="submit" value="Login" />

                    </form>
                </div>
            </div>

        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
